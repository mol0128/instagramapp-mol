.container
  .profilePage
    .profilePage_user
      .profilePage_user_name
        = current_user.name

      .profilePage_user_image
        - if current_user&.profile&.avatar&.attached?
          = image_tag current_user.profile.avatar
        - else
          = image_tag 'default-avatar.png'

      %ul.profilePage_user_count
        %li
          Photos
        %li
          Followers
        %li
          Following

  .article-container
    - current_user.articles.each do |article|
      .user-info
        .user-avatar
          = image_tag article.user.profile.avatar
        .user-name
          = article.user.name
      - article.images.each do |image|
        .article-image
          = image_tag image
      .article-content
        .article-status
          - if current_user.has_liked?(article)
            =link_to article_like_path(article), data: { method: 'delete' } do
              %i.fa.fa-heart{"aria-hidden" => "true"}
          - else
            = link_to article_like_path(article), data: { method: 'post' } do
              %i.fa.fa-heart-o{"aria-hidden" => "true"}
          %i.fa.fa-comment-o{"aria-hidden" => "true"}
          = link_to 'https://twitter.com/intent/tweet?url=https://localhost:3000/articles/' do
            %i.fa.fa-share-alt{"aria-hidden" => "true"}
        .article-detail
          = article.content
          %br
          = article.created_at